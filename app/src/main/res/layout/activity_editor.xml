<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_general"
    tools:context=".EditorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/name_header_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/name"
            tools:text="Name" />

        <EditText
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/required_field"
            tools:text="Rainbow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/name_header_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/price"
            tools:text="Price" />

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/required_field"
            android:inputType="numberDecimal"
            tools:text="55.24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/name_header_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/quantity"
            tools:text="Quantity" />

        <ImageButton
            android:id="@+id/btn_remove_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:src="@drawable/ic_remove" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="@string/required_field"
            android:inputType="number"
            tools:text="323" />

        <ImageButton
            android:id="@+id/btn_add_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:src="@drawable/ic_action_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/name_header_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/supplier"
            tools:text="Supplier" />

        <EditText
            android:id="@+id/supplier_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/required_field"
            tools:text="Google Cloud" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/name_header_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/phone"
            tools:text="Phone" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/required_field"
            android:inputType="phone"
            tools:text="0774536425" />

        <ImageButton
            android:id="@+id/btn_make_phone_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_call" />

    </LinearLayout>

</LinearLayout>